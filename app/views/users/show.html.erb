      <div class="flex overflow-x-auto overflow-y-hidden gap-2 sm:gap-4 flex-nowrap h-auto">
        <%= render 'shared/test_reviewdevise_card' %>
      </div>
    </div>
    <div class="max-w-10xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
      <h2 class="text-2xl font-bold text-gray-900 py-2 sm:py-2 border-t border-gray-500">Desk</h2>
      <div class="flex overflow-x-auto overflow-y-hidden gap-2 sm:gap-4 flex-nowrap h-auto">
        <%= render 'shared/test_reviewdevise_card' %>
